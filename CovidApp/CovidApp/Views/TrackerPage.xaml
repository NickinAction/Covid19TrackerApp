<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CovidApp.Views.TrackerPage">
    
    <ContentPage.Content>

        <Grid RowDefinitions="*, Auto, Auto, Auto, Auto, *">


            <Label 
                x:Name="CasesCount"
                Grid.Row="1"
                TextColor="black"
                Text="##"
                FontSize="90"
                HorizontalOptions="Center" />
            <Label 
                Grid.Row="2"
                TextColor="black"
                FontSize="22"
                Text="{Binding LatLong}"
                HorizontalOptions="Center" />
            <Label 
                Grid.Row="3"
                Text="##"
                TextColor="black"
                FontSize="90"
                HorizontalOptions="Center" />
            <Label 
                Grid.Row="4"
                Text="deaths"
                TextColor="black"
                FontSize="22"
                HorizontalOptions="Center" />


        </Grid>
    </ContentPage.Content>
</ContentPage>